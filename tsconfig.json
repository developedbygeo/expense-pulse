{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [],

    // imports
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/frontend/components/*"],
      "@/store/*": ["./src/frontend/store/*"],
      "@/types/*": ["./src/frontend/types/*"],
      "@/routes/*": ["./src/frontend/routes/*"],
      "@/data/*": ["./src/frontend/data/*"],
      "@/styles/*": ["./src/frontend/styles/*"],
      "@/elements/*": ["./src/frontend/components/elements/*"],
      "@/modules/*": ["./src/frontend/components/modules/*"],
      "@/lib/*": ["./src/frontend/lib/*"],

      // api and db
      "@/api/*": ["./src/api/*"],
      "@/db/*": ["./src/db/*"]
    }
  },
  "include": ["src/**/*"]
}
